
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.BannerText = "Contact us";
    ViewBag.BannerImage = "../assets/img/page-title-bg.jpg";
}

@section Section{
    @Html.Partial("_PageBanner")
}
<div class="contact-page-conent-area section-padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-5">
                <div class="contact-page-content-one contact-v2-page-one">
                    <div class="row">
                        <div class="col-md-4">
                            <a class="contact-info-box" href="#">
                                <i class="zmdi zmdi-home"></i>6281 Liana Extensions, Lemkeport,
                                NY 01688-8754
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a class="contact-info-box" href="#"><i class="zmdi zmdi-phone"></i>(517) 548-4152 <br>(229) 469-5358</a>
                        </div>
                        <div class="col-md-4">
                            <a class="contact-info-box" href="#"><i class="zmdi zmdi-email"></i>toni14@hotmail.com <br>zoey.friesen@hotmail.com</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12 col-sm-7">
                <div class="row">
                    <div class="col-md-6">
                        <div class="contact-page-form contact-pageform-v2">
                            <h3>Get in touch</h3>
                            <form action="https://formspree.io/rabukushia@gmail.com" method="POST">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="contact-us-name">Name*</label>
                                        <input id="contact-us-name" name="contact-us-name" type="text">
                                    </div>
                                    <div class="col-md-6">
                                        <label for="contact-us-email">Email*</label>
                                        <input id="contact-us-email" name="contact-us-email" type="email">
                                    </div>
                                </div>
                                <label for="contact-us-subject">Subject*</label>
                                <input id="contact-us-subject" name="contact-us-subject" type="text">
                                <label for="contact-us-message">Message*</label>
                                <textarea name="contact-us-message" id="contact-us-message" cols="30" rows="10"></textarea>
                                <button type="submit" class="pink-btn">Submit</button>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-6 padding-top">
                        <div class="contact-map-area contact-map-v2">
                            <div id="googleMap" style="width:100%;height:490px"></div>
                            <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD7CQl6fRhagGok6CzFGOOPne2X1u1spoA"></script>
                            <script src="assets/js/map.js"></script>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/mapScript")
